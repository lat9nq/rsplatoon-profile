    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Only",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"]
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Browser",
            "url": "http://localhost",
            "webRoot": "${workspaceFolder}/src"
        }
    ],
    "compounds": [
        {
            "name": "Watch Breakpoints",
            "configurations": ["Server Only", "Browser"]
        }
    ]
}